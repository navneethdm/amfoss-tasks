#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int T,N,X,Y;
    scanf("%d",&T);
    if (T>1 && T<1000);
    {
        while (T--) 
        {
            scanf("%d %d %d",&N,&X,&Y); 
            if ((N+1)*Y>=X)
                printf("YES\n");
            else
                printf("NO\n");
        }
    }

    return 0;
}
